{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Leg 3: North America",
    "view": {"stroke": "transparent"},
    "layer": [
        {
            "data": 
            {
                "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/assignment2/js/northamerica_countries.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "darkgrey", "stroke": "white"},
            "projection": {"type": "albersUsa"}
        },
        {
            "data": 
            {
                "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/assignment2/js/northamerica_states.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_1_states_provinces"}
            },
            "mark": {"type": "geoshape", "fill": "darkgrey", "stroke": "white"}
        },
        {
            "data": 
            {
              "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/assignment2/js/northamerica_graticules.json",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_15"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
          },
        {
            "data": 
            {
                "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/assignment2/data/tour_data.csv"
            },
            "transform": 
            [
                {
                    "filter":
                    {
                        "field": "Leg",
                        "equal": "North America"
                    }
                },
                {
                    "calculate": "datum.Revenue/datum['Number of shows']", "as": "Revenue_per_show"
                }
            ],
            "mark": 
            {
                "type": "circle", 
                "color": "red"
            },
            "encoding": 
            {
                "longitude": {"field": "Longitude", "type": "quantitative"},
                "latitude": {"field": "Latitude", "type": "quantitative"},
                "size": 
                {
                    "field": "Revenue_per_show",
                    "type": "quantitative",
                    "title": "Revenue per show",
                    "legend": {"orient": "left"}
                }, 
                "tooltip": 
                [
                    {"field": "City", "type": "nominal"},
                    {"field": "Country", "type": "nominal"},
                    {"field": "Venue", "type": "nominal"},
                    {"field": "Revenue_per_show", "type": "quantitative", "format": "$,.0f", "title": "Revenue per show"},
                    {"field": "Revenue", "type": "quantitative", "format": "$,"},
                    {"field": "Number of shows", "type": "quantitative"}
                ]
            }
        }
    ]
}