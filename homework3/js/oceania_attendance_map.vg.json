{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Leg 2: Oceania",
    "layer": [
        {
            "data": {
            "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/homework3/js/oceania_countries.json",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "darkgrey", "stroke": "white"}
        },
        {
            "data": {
            "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/homework3/js/oceania_states.json",
            "format": {"type": "topojson", "feature": "STE_2016_AUST"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
        },
        {
            "data": {
            "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/homework3/js/oceania_cities.json",
            "format": {"type": "topojson", "feature": "ne_110m_populated_places"}
            },
            "mark": {"type": "circle", "color": "black"}
        },
        {
            "data": {
              "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/homework3/js/oceania_graticules.json",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_15"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
          },
        {
            "data": {
            "url": "https://raw.githubusercontent.com/JessalynLim/FIT3179/main/homework3/data/tour_data.csv"
            },
            "transform": [
                {
                    "filter":
                    {
                        "field": "Leg",
                        "equal": "Oceania"
                    }
                },
                {
                    "calculate": "datum.Revenue/datum['Number of shows']", "as": "Revenue_per_show"
                }
            ],
            "mark": {"type": "circle", "color": "red", "tooltip": {"content": "data"}},
            "encoding": {
            "longitude": {"field": "Longitude", "type": "quantitative"},
            "latitude": {"field": "Latitude", "type": "quantitative"},
            "size": {
                "field": "Revenue_per_show",
                "type": "quantitative",
                "title": "Revenue per show"
            }
            }
        }
    ]
  }
  
